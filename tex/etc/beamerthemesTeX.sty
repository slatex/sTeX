  \def\stexthm@kw@remark{Bemerkung}
  \def\stexthm@kw@example{Beispiel}
  \def\stexthm@kw@definition{Definition}
}


\AtBeginDocument{
  \cs_if_exist:NTF\iflanguage{
    \cs_if_exist:NT \l@english {
      \iflanguage{english}{
        \stex_beamertheme_do_en:
