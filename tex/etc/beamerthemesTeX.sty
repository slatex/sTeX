  \def\stexthm@kw@axiom{Axiom}
  \def\stexthm@kw@remark{Remark}
  \def\stexthm@kw@example{Example}
  \def\stexthm@kw@definition{Definition}
}

\cs_set_protected:Nn \stex_beamertheme_do_de: {
