\ExplSyntaxOn
\protected\def\stexbeamerthm#1#2#3#4#5#6#7#8{
  \tl_if_empty:nTF{#4}{
    \newcounter{#1}
  }{
    \newcounter{#1}[#4]
    \tl_set:cn{the#1}{
      \use:c{the#4}.\arabic{#1}
    }
  }
  \tl_set:cn{#1autorefname}{#6}

  \newenvironment{#1}{
    \ifhmode\par\fi

    \tl_if_empty:nF{#5}{
      \setcounter{#1}{\value{#5}}
      \stepcounter{#5}
    }
    \refstepcounter{#1}
    \noindent#7{
      #6~\use:c{the#1}
      \tl_if_empty:NF\thistitle{
        {}~(\thistitle)
      }.
    }
    #8
  }{\par}
  \csname stexstyle#2\endcsname[#3]{\begin{#1}}{\end{#1}}
}

