DefMacro('\baseURI []Semiverbatim', sub {
   my $baselocal = ToString(Digest($_[1]));
   $baselocal = abs_path($baselocal) unless $baselocal=~/^(\w+):\/\//;
   AssignValue('BASELOCAL'=>$baselocal,'global');
   AssignValue('URLBASE'=>ToString(Digest($_[2])),'global');
 });
