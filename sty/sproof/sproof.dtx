% \begin{macro}{\the@pst@label}
% |\the@pst@label| evaluates to the current step label.
%    \begin{macrocode}
\def\the@pst@label{%
  \pst@make@label\pst@label{\number\count\count10}\pstlabel@postfix%
}%
%    \end{macrocode}
%\end{macro}
