\Msg{* if your TeX distribution uses such a database.}
\Msg{*}

\nopreamble\nopostamble
\generate{\file{hwexam.sty.ltxml}{\from{hwexam.dtx}{ltxml.sty}}}
\generate{\file{hwexam.cls.ltxml}{\from{hwexam.dtx}{ltxml.cls}}}

\Msg{*}
\Msg{* You probably need to move the generated files hwexam.{sty,cls}.ltxml into a directory searched by LaTeXML.}
\Msg{*}

\endbatchfile
