\preamble
\endpreamble

%\usedir{tex/latex/listings}
\keepsilent
\askforoverwritefalse

% generate base package
\generate{\file{hwexam.sty}{\from{hwexam.dtx}{package}}}
% and the class
\generate{\file{hwexam.cls}{\from{hwexam.dtx}{cls}}}

